<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specific: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/measurable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurable: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specific" />


    <TextView
        android:id="@+id/attainable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attainable: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measurable" />

    <TextView
        android:id="@+id/relevant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relevant: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attainable" />

    <TextView
        android:id="@+id/timeBound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time-bound: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relevant" />
</androidx.constraintlayout.widget.ConstraintLayout>

